[MASTER]
ignore=venv,__pycache__,build,dist
jobs=0

[MESSAGES CONTROL]
disable=
    C0111,  # missing-docstring
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments

[FORMAT]
max-line-length=100
indent-string='    '

[BASIC]
good-names=i,j,k,ex,Run,_,id,pk,df

[DESIGN]
max-args=7
max-attributes=15
max-locals=20
max-returns=6
max-branches=15
max-statements=50

